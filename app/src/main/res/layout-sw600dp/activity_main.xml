    <fragment
        android:name="com.example.dreams.popularmovies_stage2.MainFragment"
        android:id="@+id/image_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    </fragment>

    <fragment
        android:name="com.example.dreams.popularmovies_stage2.FilmDetailsFragment"
        android:id="@+id/details_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
